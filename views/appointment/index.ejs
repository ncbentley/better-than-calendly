<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/styles') %>
    <link rel="stylesheet" href="../styles/appointment.css">
    <script src="../scripts/appointment.js" defer></script>
</head>

<body>
    <%- include('../partials/header') %>
    <main>
        <ul>
            <% appointment.forEach(appointment =>{ %>
            <li id="<%=appointment._id%>">
                <section class="description">
                    <h1><%=appointment.name%></h1>
                    <p><%=appointment.message%></p>
                </section>
                <section class="links">
                    <% if (appointment.user == user.id) {%>
                    <!-- edit link -->
                    <a href="/appointment/<%=appointment._id %>/edit">(edit)</a>
                                    
                    <!-- delete -->
                    <form action="/appointment/<%=appointment._id%>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                <%}%>
                </section>
            </li>
            <% }); %>
        </ul>
    </main>
</body>

</html>